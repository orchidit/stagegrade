<% content_for :title, "#{@critic.name}" %>

<h2><%= @critic.name %></h2>
<hr />

<div id="left" class="span-5">
<%= menu :sort, "Sort",
	:options => { :class => "span-5", :default => { :sort => :grade_desc } },
	:items => [[:grade_desc, "Best Grade"], [:grade_asc, "Worst Grade"], [:latest, "Last Updated"]]
%>
	<hr class="space" />
	<div id="critic_info">
		<span class="bold">Publications</span><br />
			<% @critic.publications.each do |pub| %>
			<%= link_to pub.name, pub %><br />
		<% end %>
	</div>
</div>

<div id="review_list" class="span-16 last">
	<div class="list_header bold"><h3>Reviews</h3></div>
	<%= render :partial => "reviews/review", :collection => @reviews %>
</div>