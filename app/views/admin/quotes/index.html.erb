<h2>Listing Quotes</h2>
<hr />
<% form_for @quote, :url => admin_quotes_path do |f| %>
	<%= f.error_messages %>
	<%= f.text_area :text, :rows => 3, :style => "height:auto; resize:none;" %><br />
	<%= f.check_box :is_active %> <%= f.label :is_active, "Make Active" %>
	<%= f.submit "Create New" %>
<% end %>
<br />
<table>
	<tr>
		<th></th>
		<th></th>
		<th>ID</th>
		<th>Text</th>
		<th>Is Active</th>
		<th>Created At</th>
		<th>Updated At</th>
	<% @quotes.each do |q| %>
		<tr>
			<%= td(link_to "Edit", edit_admin_quote_path(q)) %>
			<%= td(link_to "Delete", admin_quote_path(q), :confirm => "Are you sure?", :method => :delete) %>
			<%= td q.id.to_s %>
			<%= td q.html_text || "" %>
			<%= td(q.is_active ? "Y" : "") %>
			<%= td q.created_at.strftime("%x %I:%M %p") %>
			<%= td q.updated_at.strftime("%x %I:%M %p") %>
		</tr>
	<% end %>
</table>
<hr />
<%= link_to 'Back to Admin', admin_index_path %>