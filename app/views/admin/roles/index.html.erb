<h2>Listing Roles</h2>
<hr />
<% form_for @role, :url => admin_roles_path do |f| %>
	<%= f.error_messages %>
	<%= f.text_field :name %> <%= f.submit "Create New" %>
<% end %>
<br />
<table>
	<tr>
		<th></th>
		<th>ID</th>
		<th>Name</th>
		<th>User Ct.</th>
		<th>Created At</th>
		<th>Updated At</th>
	<% @roles.each do |role| %>
		<tr>
			<%= td(link_to "Delete", admin_role_path(role), :confirm => "Are you sure?", :method => :delete) %>
			<%= td role.id.to_s %>
			<%= td in_place_editor_field role, 'name' %>
			<%= td role.users.length.to_s %>
			<%= td role.created_at.strftime("%x %I:%M %p") %>
			<%= td role.updated_at.strftime("%x %I:%M %p") %>
		</tr>
	<% end %>
</table>
<hr />
<%= link_to 'Back to Admin', admin_index_path %>