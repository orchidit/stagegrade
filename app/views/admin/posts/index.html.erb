<h2>Listing Posts</h2>
<hr />

<div style="text-align:center">
	<%= will_paginate @posts %>
</div>
<hr class="space" />
<hr />

<table>
	<tr>
		<th></th>
		<th></th>
		<th></th>
		<th>ID</th>
		<th>Title</th>
		<th>Published</th>
		<th>Posted By</th>
		<th>Created At</th>
		<th>Updated At</th>
	</tr>
	<% @posts.reverse.each do |p| %>
		<tr>
			<%= td(link_to "View", p) %>
			<%= td(link_to "Edit", edit_admin_post_path(p)) %>
			<%= td(link_to "Delete", admin_post_path(p), :confirm => "Are you sure?", :method => :delete) %>
			<%= td p.id.to_s %>
			<%= td p.title %>
			<%= td p.is_published ? "Y" : "" %>
			<%= td p.user.name %>
			<%= td p.created_at.strftime("%x %I:%M %p") %>
			<%= td p.updated_at.strftime("%x %I:%M %p") %>
		</tr>
	<% end %>
</table>

<hr />

<div style="text-align:center">
	<%= will_paginate @posts %>
</div>
<hr class="space" />
<hr />