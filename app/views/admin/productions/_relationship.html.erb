<div class="relationship">
  <p>
	<%= f.collection_select(:relationship_type_id, RelationshipType.all, :id, :description) %>
	<%= f.label(:custom_connector) + ": " + f.text_field(:custom_connector) %>
	<%= f.label(:participant_name, "Name") + ": " + f.text_field(:participant_name) %>
	<% if f.object.new_record? %>
		<%= link_to "Remove", "#", :class => "remove" %>
	<% else %>
		<!-- For existing records we add a checkbox to be able to delete records. -->
		<%= f.check_box(:_destroy) + f.label(:_destroy, "Delete") %>
    <% end %>
  </p>
</div>