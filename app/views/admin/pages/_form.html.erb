<style>
	label {
		font-weight: normal;
	}
</style>

<%= include_markitup("#page_body") %>

<% form_for(@page, :url => (@page.new_record? ? admin_pages_path : admin_page_path(@page))) do |f| %>
	<%= f.error_messages %>
	<%= f.label :title %><br />
	<%= f.text_field :title %><br />
	<br />
	<%= f.label :slug %><br />
	<%= f.text_field :slug %><br />
	<br />
	<%= f.label :body %><br />
	<%= f.text_area :body %><br />
	<br />
	<%= f.submit "Submit" %>
<% end %>