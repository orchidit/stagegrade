<div class="span-24 last">
    <div style="float:left">
        <%= collection_select(:production, :id, Production.playing.sort_by_title.all, :id, :play_title, :prompt => "Jump directly to a show...") %>
        <script>
        $("#production_id").value = null;
            $("#production_id").change(function() { window.location.href = "<%= root_url %>productions/" + this.value });
        </script>
    </div>
	<div style="float:right; padding-top: 5px">
		<% if current_user.nil? %>
			<%= link_to "Sign Up", new_user_path %> |
			<%= link_to "Sign In", new_user_session_path %>
		<% else %>
			<%= link_to current_user.name || current_user.email, edit_account_url %> |
			<%= link_to("Admin", admin_index_path) + " | " if is_admin %>
			<%= link_to "Log Out", user_session_path, :method => :delete %>
		<% end %>
	</div>
</div>

<hr style="margin-bottom: 6px" />

<div id="header" class="span-24">
	<div id="logo" class="prepend-1 span-11">
		<% link_to root_url do %>
			<%= image_tag "stagegrade_400.png" %>
		<% end %>
	</div>
	<div id="header_right" class="span-11">
		<%= google_search %>
		<div id="header_right_buttons">
			<% link_to new_user_url do %>
				<%= image_tag "email-button.png" %>
			<% end %>
			<% link_to "http://www.facebook.com/stagegrade", :target => "_blank" do %>
				<%= image_tag "facebook-button.png" %>
			<% end %>
			<% link_to feed_url, :target => "_blank" do %>
				<%= image_tag "feed-button.png" %>
			<% end %>
			<% link_to "http://www.twitter.com/stagegrade", :target => "_blank" do %>
				<%= image_tag "twitter-button.png" %>
			<% end %>
		</div>
	</div>
</div>
<hr class="space" style="margin-bottom: 6px" />

<hr style="margin-bottom: 6px" />
<div class="nav_bar" class="span-24 last">
	<ul id="main_nav">
		<li class="span-2"><%= link_to "Home", root_path %></li>
		<li class="span-3"><%= link_to "ShowFinder", productions_path %></li>
		<li class="span-3"><%= link_to "Musicals", productions_path + "#show_type=musical" %></li>
		<li class="span-3"><%= link_to "Plays", productions_path + "#show_type=play" %></li>
		<li class="span-3"><%= link_to "Deals", "/deals.html" %></li>
		<li class="span-3"><%= link_to "How It Works", "/grading.html" %></li>
		<li class="span-3"><%= link_to "News", posts_path %></li>
		<li class="span-4 notice" style="border-left: 2px solid #FFD324;margin-top:-3px;padding:0px"><%= link_to "Win Free Tickets!", "/contest.html" %></li>
	</ul>
</div>
