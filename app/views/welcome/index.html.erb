<% content_for :title_postfix, " - Reporting the critical consensus for New York City plays and musicals" %>

<div id="main" class="span-18">
	<% @panels.each_with_index do |panel, i| %>
		<div class="span-9 round-box<%= cycle("", " last", :name => :last) %>"
			<%= cycle("style=\"margin-right: 5px\"", "", :name => :style) %>>
			<%= render :partial => 'panel', :locals => { :div_id => "panel-#{i}", :panel => panel } %>
		</div>
	<% end %>
</div>

<div id="right_nav" class="span-6 last">
	<% if !current_user %>
		<div id="sign-up-container">
			<%= render :partial => "emails/sign_up_box" %>
		</div>
	<% end %>
	<div id="advert_sq" style="text-align:center">
		<%= ad_square %>
	</div>
	<hr class="space" />
	<div class="round-box">
		<div class="round-box-header">
			What's New?
		</div>
		<div class="round-box-content">
			<ul>
			<% @feed[0...3].each_with_index do |post, i| %>
				<% if post.is_a? Production and !post.teaser.empty? %>
					<li><%= link_to post.teaser, production_path(post) %></li>
				<% elsif post.is_a? Post and !post.title.empty? %>
					<li><%= link_to post.title, post_path(post) %></li>
				<% end %>
			<% end %>
			<li><%= link_to "More...", posts_path %></li>
			</ul>
		</div>
	</div>
	<hr class="space" />

	<div id="advert" class="push-1 span-5">
		<%= ad_tall %>
	</div>
</div>